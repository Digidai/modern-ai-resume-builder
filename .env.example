# Optional: frontend override for the AI proxy endpoint.
# Defaults to /api/gemini on the same origin.
VITE_AI_PROXY_URL=

# Optional: canonical site URL for SEO assets (sitemap, canonical, OG URLs).
# Prefer SITE_URL to avoid embedding into the client bundle.
SITE_URL=https://genedai.cv

# Server-side secret for Cloudflare Worker (set via `wrangler secret put GEMINI_API_KEY`).
# Do not prefix with VITE_.
GEMINI_API_KEY=

# Optional: dedicated signing secret for AI session tokens.
# Set via `wrangler secret put GEMINI_SIGNING_SECRET`.
GEMINI_SIGNING_SECRET=

# Optional: comma-separated allowed origins for AI session requests.
# Useful when frontend and worker run on different origins in development.
ALLOWED_ORIGINS=

# Optional: worker-side AI throttling controls.
AI_RATE_LIMIT_PER_MINUTE=20
AI_PER_SESSION_RATE_LIMIT_PER_MINUTE=20
AI_GLOBAL_RATE_LIMIT_PER_MINUTE=240
AI_SESSION_RATE_LIMIT_PER_MINUTE=60
AI_SESSION_TTL_SECONDS=600
AI_CLIENT_TOKEN_TTL_SECONDS=86400
